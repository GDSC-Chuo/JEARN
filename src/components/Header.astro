---
import global from '../../styles/global.css'; // グローバルスタイルをインポートimport type { ACTION_ERROR_CODES } from 'astro:actions';
import Menu from './menu.astro'; // メニューコンポーネントをインポーネント
---

<header>
    <!-- ロゴ設置 -->
    <div class="jearn-logo">
        <!-- ロゴをクリックするとホームに戻るリンク -->
        <a href="/">
            <img src="/src/img/jearn_logo.svg" alt="JEAEN Logo" class="jearn-logo"/>
        </a>
    </div>
    
    <!-- ナビゲーションメニュー -->
    <div class="global-nav">
        <!-- ニュースメニュー -->
        <div class="menu" id="news">
            <!-- ニュースのリンク -->
            <a href="https://www.facebook.com/npojearn/?locale=ja_JP" target="_blank" class="icon-area">
                <!-- アイコン -->
                <img src="/src/img/news_icon.svg" alt="Facebook" class="news-logo">
                <!-- アイコンの下のテキスト -->
                <p class="icon-text">News</p>
            </a>
        </div> 

        <!-- Join Usメニュー -->
        <div class="menu" id="joinus">
            <!-- 「Join us」のページへのリンク -->
            <a href="/joinus" class="icon-area">
                <!-- アイコン -->
                <img src="/src/img/joinus_icon.svg" alt="Join us" class="join-logo">
                <!-- アイコンの下のテキスト -->
                <p class="icon-text">Join us</p>
            </a>
        </div>    

        <!-- AI翻訳メニュー -->
        <div class="menu" id="translate">
            <!-- Google Translateへのリンク -->
            <a href="https://translate.google.com/?hl=ja&sl=ja&tl=en&op=translate" class="icon-area">
                <!-- アイコン -->
                <img src="/src/img/translate_icon.svg" alt="Language" class="language-logo">
                <!-- アイコンの下のテキスト -->
                <p class="icon-text">AI Translation</p>
            </a>
        </div> 

        <!-- ハンバーガーメニュー -->
        <div class="menu hb-menu" id="hb-menu">
            <div class="icon-area" id="hb-icon-area">
                <!-- ハンバーガーアイコン -->
                <div class="hb-icon">
                    <div class="hamburger" id="hamburger-icon">
                        <span class="bar"></span>
                        <span class="bar"></span>
                        <span class="bar"></span>
                    </div>
                    <div class="close-icon"></div> <!-- ✕アイコン -->
                </div>
                <!-- メニューのテキスト -->
                <p class="icon-text" id="menu-text">Menu</p> <!-- テキストを切り替える -->
            </div>
        </div>
    </div>
</header>

<Menu /> <!-- メニューコンポーネントをインポート -->

<script type="module" src="/public/menu.js"></script>

<style>
    /* ヘッダー全体のスタイル */
    header {
        display: flex; /* 子要素を横並びにする */
        align-items: center; /* 子要素を縦方向に中央揃え */
        padding: 5px;
        padding-right: 0;
        background-color: #fff; /* 背景色 */
        /* 後で削除予定（ヘッダーの高さ確認のため使用） */
        border-bottom: #333 solid 1px; /* 下線を追加 */
    }

    /* ロゴのスタイル */
    .jearn-logo {
        width: 100%;
        max-width: 200px; /* ロゴの最大幅を設定 */
    }

    /* ナビゲーションメニューのスタイル */
    .global-nav {
        display: flex; /* 横並び */
        justify-content: flex-end; /* 右側に配置 */
        align-items: center; /* 縦方向に中央揃え */
        width: 100%;
    }

    /* メニューの個別のスタイル */
    .menu {
        display: flex; 
        flex-direction: column; /* 縦並び */
        align-items: center;
        justify-content: center;
        position: relative;
    }

    /* メニュー間の仕切り線 */
    .menu:not(:last-child)::after {
        content: ""; /* 空の内容を追加 */
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%); /* 垂直中央に配置 */
        width: 0.5px;
        height: 60%;
        background-color: #C4C4C4; /* 線の色をグレーに */
    }

    /* アイコンとテキストの配置 */
    .icon-area {
        display: flex; 
        flex-direction: column;/* 縦並びにする */
        padding: 10px;
        width: fit-content; /* コンテンツに合わせた幅 */
        align-items: center;
        text-align: center;
        text-decoration: none; /* リンクの下線を消す */
        cursor: pointer; /* カーソルをポインターに */
    }

    /* メニューのアイコンサイズ調整 */
    .menu img {
        width: 24px;
        height: 24px;
    }

    /* アイコンの下のテキスト */
    .icon-text {
        margin: 0;
        color: #333; /* 文字色 */
        font-size: 7px; /* 文字サイズ調整 */
        white-space: nowrap; /* テキストを折り返さない */
    }

    /* ハンバーガーアイコンのスタイル */
    .hb-icon {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 24px;
        height: 24px;
        position: relative; /* 絶対位置指定のために必要 */
    }
    .hamburger {
        width: 85%;
        height: 85%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
    }

    /* ハンバーガーのバー */
    .bar {
        width: 100%;
        height: 3px;
        background-color: #333;
        border-radius: 2px;
    }

    /* タブレットサイズでの調整 */
    @media screen and (min-width: 768px) and (max-width: 1024px) {
        
        .jearn-logo img {
            width: 200px;
            height: auto;
        }

        /* メニューアイコンのサイズ調整 */
        .menu img, .hb-icon {
            width: 28px;
            height: 28px;
        }
        /* メニューアイコンのフォントサイズ調整 */

        .icon-text {
            font-size: 9px; 
        }
        /* アイコン同士の間隔調整 */
        .icon-area {
            padding: 12px;
        }
    }

    /* PCサイズでの調整 */
    @media screen and (min-width: 1025px) {
        /* ロゴのサイズ調整 */
        .jearn-logo img {
            width: 300px;
        }

        /* メニューアイコンのサイズ調整 */
        .menu img, .hb-icon {
            width: 32px;
            height: 32px;
        }

        /* メニューアイコンのフォントサイズ調整 */
        .icon-text {
            font-size: 15px; 
        }
        /* アイコン同士の間隔調整 */
        .icon-area {
            padding: 20px;
        }

        header {
            padding-left: 20px; /* 左側のパディング(ロゴの前のスペース）を追加 */
        }
    }

    /* ハンバーガーアイコンの状態切り替え（CSSトグル方式） */

.close-icon {
  position: absolute;
  width: 100%;
  height: 100%;
  transition: opacity 0.2s ease;
}

/* 三本線ハンバーガーアイコン */
/* .hamburger-icon::before,
.hamburger-icon::after,
.hamburger-icon div {
  content: '';
  display: block;
  height: 3px;
  width: 100%;
  background: #333;
  margin: 4px 0;
  border-radius: 2px;
} */
.hamburger-icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: 1;
  pointer-events: auto;
}

/* ✕アイコン */
.close-icon {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  text-align: center;
  line-height: 24px;
  opacity: 0;
  pointer-events: none;
}
.close-icon::before {
  content: "✕";
}

/* 状態トグルクラス */
.open .hamburger-icon::before,
.open .hamburger-icon::after,
.open .hamburger-icon .bar {
  opacity: 0;
  pointer-events: none;
  display: none;
}
.open .hamburger::before,
.open .hamburger::after,
.open .hamburger .bar {
  opacity: 0;
  pointer-events: none;
  display: none;
}
.open .close-icon {
  opacity: 1;
  pointer-events: auto;
}
.open .menu-label::before {
  content: "Close";
}
.menu-label::before {
  content: "Menu";
}
.menu-label {
  font-size: 7px;
}

/* メニューのテキスト位置調整 */
.icon-text {
  margin-top: 5px;
  font-size: 12px; /* 文字サイズ */
  color: #333;
  text-align: center;
  white-space: nowrap;
}

/* アイコンとテキストの位置を揃える */
.icon-area {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 8px;
  width: fit-content;
  cursor: pointer;
}

/* ハンバーガーアイコンのスタイル */
.hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    width: 85%;
    height: 85%;
}

.bar {
    width: 100%;
    height: 3px;
    background-color: #333;
    border-radius: 2px;
}

/* ✕アイコンのスタイル */
.close-icon {
    font-size: 24px;
    font-weight: bold;
    color: #333;
    text-align: center;
    line-height: 24px;
    opacity: 0; /* 初期状態で非表示 */
    pointer-events: none; /* 初期状態でクリック不可 */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.close-icon::before {
    content: "✕"; /* バツマークを表示 */
}

/* 状態トグルクラス */
.open .hamburger .bar {
    display: none; /* ハンバーガーアイコンを非表示 */
}
.open .close-icon {
    opacity: 1; /* ✕アイコンを表示 */
    pointer-events: auto; /* クリック可能 */
}
</style>
