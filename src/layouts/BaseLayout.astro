---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Pageheading from "../components/Pageheading.astro";

const { headtitle, pagetitle, bgcolor } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="" href="" />
		<meta name="generator" content={Astro.generator} />
		<title>{headtitle} | JEARN</title>
	</head>
	<body>
		<Header />
		<main>
			<Pageheading pagetitle={pagetitle} bgcolor={bgcolor} />
			<div class="page-content">
				<slot />
			</div>
		</main>
		<a href="#"><div class="pagetop">ページTOPへ</div></a>
		<Footer />
	</body>
</html>
<style>
	html {
		scroll-behavior: smooth;
	}

	a {
		outline: none;
		text-decoration: none;
	}

	a:link {
		color: #000;
	}
	a:visited {
		color: #000;
	}
	a:active {
		color: #000;
	}

	.pagetop {
		text-align: center;
		font-size: 24px;
		padding-bottom: 15px;
	}
</style>
