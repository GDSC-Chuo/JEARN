---
import "../styles/global.css";
import Header from "../components/header.astro";
import Footer from "../components/footer.astro";
import Pageheading from "../components/page_heading.astro";

const { headtitle, pagetitle, bgcolor } = Astro.props;
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="" href="" />
		<meta name="generator" content={Astro.generator} />
		<title>{headtitle} | JEARN</title>
	</head>
	<body>
		<Header />
		<main>
			<Pageheading pagetitle={pagetitle} bgcolor={bgcolor} />
			<div class="page-content">
				<slot />
			</div>
		</main>
		<a href="#"><div class="pagetop">ページTOPへ</div></a>
		<Footer />
	</body>
</html>
<style>

	.pagetop {
		text-align: center;
		font-size: clamp(1.25rem, 1.159rem + 0.45vw, 1.5rem); /* 20px~24pxの間でレスポンシブ */
		padding-bottom: 0.938rem; /* 15px */
	}
</style>
